<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.optimal_drive.receipt_calculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.optimal_drive.receipt_calculator.MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="addBuy" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        
        </activity>
        <activity
            android:name="ShowTravel"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" 
                />
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        </activity>
        <activity android:name="changeTravel" 
        >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        
        </activity>
        <activity android:name="changePersonAndCurrency" 
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        
        </activity>
        <activity
            android:name="ShowCurrency"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            >
             <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        </activity>
        <activity
            android:name="ShowTraveller"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            >
             <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" >
        </activity>
        <activity android:name="HelpWindowClass" >
        </activity>
        <activity
            android:name="ReceiptView"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            >
             <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.travelassist.MainActivity"
                />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>